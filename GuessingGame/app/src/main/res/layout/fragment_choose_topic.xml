<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChooseTopicFragment">

    <data>
    <variable
        name="chooseTopicViewModel"
        type="com.cesar2m.guessinggame.ChooseTopicViewModel" />
    </data>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msj_Inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:text="@string/msjInicioChooseTopic"
        android:textSize="42sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/question_Inicio_Choose_Topic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/questionInicioChooseTopic"
            />


        <CheckBox
            android:id="@+id/chkNombresPropios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Propios" />

        <CheckBox
            android:id="@+id/chkComida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comidas y frutas" />

        <CheckBox
            android:id="@+id/checkFrutas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frutas" />

        <CheckBox
            android:id="@+id/checkSO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistemas operativos" />

        <Button
            android:id="@+id/btn_Comenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Comenzar"/>


    </LinearLayout>

</LinearLayout>

</layout>